<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d3d1d1"
    tools:context="com.hgsil.android.login.MainActivity">

    <TextView

        android:id="@+id/textReturn"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:drawableLeft="@drawable/ic_arrow_back_black_24dp"
        android:textSize="40dp"
        android:gravity="center_vertical"
        android:background="#000000"
        android:textColor="#1a14de"

        />


    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="登陆"
        android:gravity="center_vertical"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:background="#000000"
        android:layout_toRightOf="@id/textReturn"
        />

    <RelativeLayout
        android:id="@+id/table1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text1"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="10dp"
        android:background="#dfdfdf"
        android:gravity="center_horizontal">


            <AutoCompleteTextView
                android:id="@+id/usernameInlogin"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:hint="输入手机号"
                android:maxLines="1"
                android:textSize="20sp"
                android:background="#ebebeb"
            />
            <TextView
                android:id="@+id/nothingInlogin1"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@id/usernameInlogin"/>
            <EditText
                android:id="@+id/passwordInlogin"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@id/nothingInlogin1"
                android:layout_gravity="center_horizontal"
                android:hint="输入密码"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textSize="20sp"
                android:background="#ebebeb"
                android:maxLines="1"
                android:inputType="textPassword"
                />
            <TextView
                android:id="@+id/nothingInlogin2"
                android:layout_below="@+id/passwordInlogin"
                android:layout_width="match_parent"
                android:layout_height="20dp"/>

        <TextView
            android:id="@+id/forgetPassword"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="忘记密码"
           android:textColor="#000000"
           android:textSize="15sp"

            android:layout_below="@+id/nothingInlogin2"
            android:layout_alignRight="@+id/passwordInlogin"
            android:layout_alignEnd="@+id/passwordInlogin"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="31dp"
            android:scaleX="0.75"
            android:scaleY="0.75"

            android:textColor="#000000"
            android:layout_alignBaseline="@+id/forgetPassword"
            android:layout_alignBottom="@+id/forgetPassword"
            android:layout_alignLeft="@+id/passwordInlogin"
            android:layout_alignStart="@+id/passwordInlogin"
            android:layout_marginStart="25dp"
            android:id="@+id/checkBox"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/forgetPassword"
            android:layout_alignBottom="@+id/forgetPassword"
            android:layout_toRightOf="@+id/checkBox"
            android:text="记住密码"
            android:textSize="15dp"
            android:textColor="#000000"/>


    </RelativeLayout>

    <TextView
        android:id="@+id/creatnow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logining"
        android:text="立即用手机号注册账号"
        android:gravity="center"
        android:padding="10dp"
        android:textSize="15sp"
        android:textColor="#000000"
        android:layout_marginTop="100dp"
        android:background="#dfdfdf"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />

    <TextView
        android:layout_below="@id/table1"
        android:id="@+id/logining"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="登陆"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="#000000"
        android:background="#dfdfdf"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingBottom="10dp"
        />




</RelativeLayout>
