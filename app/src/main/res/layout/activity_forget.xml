<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
                android:background="#d3d1d1">
    <RelativeLayout
        android:id="@+id/table2"
        android:layout_below="@+id/nothingInforget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#dfdfdf"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >
        <TextView
            android:id="@+id/nousename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="账号"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:paddingBottom="5dp"
            android:textColor="#000000"
            android:layout_marginTop="20dp"
            />
        <EditText
            android:id="@+id/usernameInforget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nousename"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:hint="请输入忘记密码的账号"
            android:background="#ebebeb"

            />
        <TextView
            android:id="@+id/forgetting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/usernameInforget"
            android:text="找回密码"
            android:paddingTop="20dp"
            android:textSize="15sp"
            android:gravity="right"
            android:layout_marginRight="40dp"
            android:textColor="#000000"
            android:layout_marginBottom="20dp"
            />

    </RelativeLayout>
    <TextView
        android:id="@+id/nothingInforget"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:text="找回密码"
        android:textColor="#000000"
        android:gravity="center"
        android:textSize="20dp"/>


</RelativeLayout>